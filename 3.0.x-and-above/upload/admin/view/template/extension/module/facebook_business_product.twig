<div class="tab-pane" id="tab-facebook">
  <div class="alert alert-info"><i class="fa fa-exclamation-circle"></i> {{ text_additional_fields_info }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-google-product-category">{{ entry_facebook_google_product_category }}</label>
    <div class="col-sm-10">
      <select name="facebook_google_product_category"  id="input-facebook-google-product-category" class="form-control">
        <option value="0">{{ text_please_select }}</option>
        {% if google_product_categories and not error_google_product_category %}
        {% for id, name in google_product_categories %}
        <option value="{{ id }}"{{ facebook_google_product_category == id ? ' selected="selected"' : '' }}>{{ name }}</option>
        {% endfor %}
        {% else %}
        <div class="text-danger">{{ error_google_product_category }}</div>
        {% endif %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-condition">{{ entry_facebook_condition }}</label>
    <div class="col-sm-10">
      <select name="facebook_condition"  id="input-facebook-condition" class="form-control">
        <option value="">{{ text_please_select }}</option>
        <option value="{{ text_condition_new }}"{{ facebook_condition == text_condition_new ? ' selected="selected"' : '' }}>{{ text_condition_new }}</option>
        <option value="{{ text_condition_refurbished }}"{{ facebook_condition == text_condition_refurbished ? ' selected="selected"' : '' }}>{{ text_condition_refurbished }}</option>
        <option value="{{ text_condition_used }}"{{ facebook_condition == text_condition_used ? ' selected="selected"' : '' }}>{{ text_condition_used }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-age-group">{{ entry_facebook_age_group }}</label>
    <div class="col-sm-10">
      <select name="facebook_age_group"  id="input-facebook-age-group" class="form-control">
        <option value="">{{ text_please_select }}</option>
        <option value="{{ text_age_group_all_ages }}"{{ facebook_age_group == text_age_group_all_ages ? ' selected="selected"' : '' }}>{{ text_age_group_all_ages }}</option>
        <option value="{{ text_age_group_adult }}"{{ facebook_age_group == text_age_group_adult ? ' selected="selected"' : '' }}>{{ text_age_group_adult }}</option>
        <option value="{{ text_age_group_teen }}"{{ facebook_age_group == text_age_group_teen ? ' selected="selected"' : '' }}>{{ text_age_group_teen }}</option>
        <option value="{{ text_age_group_kids }}"{{ facebook_age_group == text_age_group_kids ? ' selected="selected"' : '' }}>{{ text_age_group_kids }}</option>
        <option value="{{ text_age_group_toddler }}"{{ facebook_age_group == text_age_group_toddler ? ' selected="selected"' : '' }}>{{ text_age_group_toddler }}</option>
        <option value="{{ text_age_group_infant }}"{{ facebook_age_group == text_age_group_infant ? ' selected="selected"' : '' }}>{{ text_age_group_infant }}</option>
        <option value="{{ text_age_group_newborn }}"{{ facebook_age_group == text_age_group_newborn ? ' selected="selected"' : '' }}>{{ text_age_group_newborn }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-gender">{{ entry_facebook_gender }}</label>
    <div class="col-sm-10">
      <select name="facebook_gender"  id="input-facebook-gender" class="form-control">
        <option value="">{{ text_please_select }}</option>
        <option value="{{ text_gender_female }}"{{ facebook_gender == text_gender_female ? ' selected="selected"' : '' }}>{{ text_gender_female }}</option>
        <option value="{{ text_gender_male }}"{{ facebook_gender == text_gender_male ? ' selected="selected"' : '' }}>{{ text_gender_male }}</option>
        <option value="{{ text_gender_unisex }}"{{ facebook_gender == text_gender_unisex ? ' selected="selected"' : '' }}>{{ text_gender_unisex }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-material">{{ entry_facebook_material }}</label>
    <div class="col-sm-10">
      <select name="facebook_material"  id="input-facebook-material" class="form-control">
        <option value="">{{ text_please_select }}</option>
        <option value="{{ text_material_cotton }}"{{ facebook_material == text_material_cotton ? ' selected="selected"' : '' }}>{{ text_material_cotton }}</option>
        <option value="{{ text_material_denim }}"{{ facebook_material == text_material_denim ? ' selected="selected"' : '' }}>{{ text_material_denim }}</option>
        <option value="{{ text_material_leather }}"{{ facebook_material == text_material_leather ? ' selected="selected"' : '' }}>{{ text_material_leather }}</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-color">{{ entry_facebook_color }}</label>
    <div class="col-sm-10">
      <input type="text" name="facebook_color" value="{{ facebook_color }}" placeholder="{{ entry_facebook_color }}" id="input-facebook-color" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input-facebook-pattern">{{ entry_facebook_pattern }}</label>
    <div class="col-sm-10">
      <input type="text" name="facebook_pattern" value="{{ facebook_pattern }}" placeholder="{{ entry_facebook_pattern }}" id="input-facebook-pattern" class="form-control" />
    </div>
  </div>
</div>